// Variables

@font-face {
  font-family: 'Big Noodle';
  src: url('../fonts/big-noodle.woff') format('woff');
}
@font-face {
  font-family: 'Big Noodle Oblique';
  src: url('../fonts/big-noodle-oblique.woff') format('woff');
}

fullSize() {
  width: 100%;
  height: 100%;
}

absolute(top, right, bottom, left) {
  position: absolute;
  top: top;
  right: right;
  bottom: bottom;
  left: left;
}

html, body {
  fullSize();
  margin: 0;
  padding: 0;
}

html {
  font-size: 10px;
}

body {
  font-family: 'Big Noodle Oblique';
  letter-spacing: .1rem;
  // background-color: #000;
  overflow: hidden;
}

h1, h2 {
  font-size: 7.2rem;
  margin: 0;
}

#heroPage {
  fullSize();
  transition: 1s all;
  z-index: -1;
}

#image {
  absolute(0, 100%, initial, 0);
  fullSize();
  background-size: contain;
  background-color: #fff;
  background-position: right;
  background-repeat: no-repeat;
  z-index: -2;
  // filter: grayscale(1);
  transition: 1s all;
  opacity: 0;

  &.animate {
    opacity: .5;
  }
}

#tint {
  absolute(0, initial, initial, 0);
  fullSize();
  z-index: -1;
  opacity: 0;
  transition: 1s all;

  &.animate {
    opacity: .25;
  }
}

#loadingFortune {
  fullSize();
  absolute(0, 0, 0, 0);
  background-color: #000;
  z-index: -3;
  display: flex;
}

.progressIndicator {
  margin: auto;
  width: 10rem;
  height: 10rem;
  border-radius: 50%;
  border: 1px solid red;
  animation: loading 1s infinite;
}

@keyframes loading {
  0% {
    transform: scale(1);
  }
  25% {
    transform: scale(.9);
  }
  50% {
    transform: scale(1);
  }
  75% {
    transform: scale(.9);
  }
  100% {
    transform: scale(1);
  }
}

#heroResult {
  absolute(45%, initial, initial,  50%);
  transform: translate(-50%, -50%);
  width: 100%;
  color: rgba(0,0,0,.9);
  text-align: center;
  filter: blur(1rem);
  opacity: 0;
  transition: 1s all;

  &.animate {
    opacity: 1;
    top: 50%;
    filter: blur(0);
  }
}
#heroName {
  absolute(initial, 0, -5%, initial);
  transform: translate(-50%, -50%);
  color: rgba(0,0,0,.9);
  filter: blur(1rem);
  opacity: 0;
  transition: 1s all;

  &.animate {
    opacity: 1;
    bottom: 0;
    filter: blur(0);
  }
}

#randomHeroButton {
  cursor: pointer;
  absolute(4rem, initial, initial, 50%);
  transform: translate(-50%, -2rem);
  width: 10rem;
  height: 10rem;
  line-height: 10rem;
  text-align: center;
  border-radius: 50%;
  border: 2px solid rgba(0,0,0,.75);
  //box-shadow: inset 0 0 2px rgba(49,141,198,.9);
  color: #000;
  font-size: 2rem;
  transition: .25s all;
  box-sizing: border-box;

  &:hover {
    box-shadow: inset 0 0 2rem rgba(49,141,198,.9), 0 0 2rem rgba(49,141,198,.9);
  }
}
