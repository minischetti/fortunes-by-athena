// Variables

@font-face {
  font-family: 'Big Noodle';
  src: url('../fonts/big-noodle.woff') format('woff');
}
@font-face {
  font-family: 'Big Noodle Oblique';
  src: url('../fonts/big-noodle-oblique.woff') format('woff');
}

fullSize() {
  width: 100%;
  height: 100%;
}

absolute(top, right, bottom, left) {
  position: absolute;
  top: top;
  right: right;
  bottom: bottom;
  left: left;
}

centerElement() {
  absolute(50%, initial, initial, 50%);
  transform: translate(-50%, -50%);
}

::selection {
  color: #fff;
  background-color: #000;
}

html, body {
  fullSize();
  margin: 0;
  padding: 0;
}

html {
  font-size: 10px;
}

* {
  // cursor: url('../assets/cursor.svg'), auto;
}

* {
  user-select: none;
  cursor: default;
}

.ui {
  cursor: pointer;
}

body {
  font-family: 'Big Noodle Oblique';
  font-size: 2.4rem;
  letter-spacing: .1rem;
  overflow: hidden;
}

h1 {
  font-size: 9.6rem;
}

h2, h3 {
  font-size: 6.4rem;
}

h1, h2, h3 {
  margin: 0;
}

a {
  text-decoration: none;
}

#settingsButton {
  absolute(2rem, initial, initial, 2rem);
}

#followButton img {
  width: 2.3rem;
  height: 2.3rem;
  border-radius: 50%;
}

#logo {
  centerElement();
  z-index: -1;
}

#socialLinks, #quickFavoriteButton {
  opacity: 0;

  &.active {
    opacity: 1;
  }
}
#socialLinks {
  z-index: 1;
  display: flex;
  absolute(2rem, 2rem, initial, initial);
  transition: 1s opacity;
  transition-delay: .5s;

  img {
    display: block;
  }
}

#socialLinks span:hover .tooltip, a:hover .tooltip {
  opacity: 1;
  right: 3.4rem;
  filter: blur(0);
}

#tweetButton {
  display: flex;
  position: relative;
  color: rgba(0,0,0,.9);
  margin: 0 2rem;
}

.tooltip {
  pointer-events: none;
  opacity: 0;
  position: absolute;
  right: 2.4rem;
  top: 0;
  overflow: visible;
  font-size: 1.2rem;
  text-align: center;
  width: 10rem;
  line-height: 2.4rem;
  background-color: black;
  color: white;
  border-radius: .4rem;
  padding: 0 1rem;
  filter: blur(.25rem);
  transition: .25s all ease-in-out;
  z-index: 1;
}

#settingsPage {
  top: -100vh;
  z-index: -1;
  position: absolute;
  display: flex;
  flex-direction: column;
  fullSize();
  background-color: #fff;
  transition: .5s all;
  visibility: hidden;
  pointer-events: none;

  &.active {
    top: 0;
    visibility: visible;
    pointer-events: auto;
  }

  .settingsContainer {
    width: 50%;
    margin: auto;

    h2 {
      margin: 4rem 0 2rem;
    }
  }

  span {
    font-family: 'Roboto', sans-serif;
    text-transform: uppercase;
    font-size: 1.4rem;
    padding: 0 2rem;
    background-color: rgba(0,0,0,.1);
    border-radius: .2rem;
    &:first-child {
      width: 85%;
    }
    &:last-child {
      width: 15%;
    }
  }
}

.setting {
  display: flex;
  margin: auto;
  height: 4rem;
  line-height: 4rem;

  &:not(:last-child) {
    margin-bottom: 2rem;
  }
}

.toggle, .keybind {
  margin-left: 2rem;
}

.toggle {
  background-color: red;

  &.active {
    background-color: green;
  }
}

.keybind {
  text-align: center;
}

