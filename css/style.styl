// Variables

@font-face {
  font-family: 'Big Noodle';
  src: url('../fonts/big-noodle.woff') format('woff');
}
@font-face {
  font-family: 'Big Noodle Oblique';
  src: url('../fonts/big-noodle-oblique.woff') format('woff');
}

fullSize() {
  width: 100%;
  height: 100%;
}

absolute(top, right, bottom, left) {
  position: absolute;
  top: top;
  right: right;
  bottom: bottom;
  left: left;
}

centerElement() {
  absolute(50%, initial, initial, 50%);
  transform: translate(-50%, -50%);
}

::selection {
  color: #fff;
  background-color: #000;
}

html, body {
  fullSize();
  margin: 0;
  padding: 0;
}

html {
  font-size: 10px;
}

body {
  font-family: 'Big Noodle Oblique';
  font-size: 2.4rem;
  letter-spacing: .1rem;
  background: url("../assets/bg.jpg") no-repeat;
  background-size: cover;
  overflow: hidden;
}

h1 {
  font-size: 9.6rem;
}

h2, h3 {
  font-size: 6.4rem;
}

h1, h2, h3 {
  margin: 0;
}

a {
  text-decoration: none;
}

#followButton img {
  width: 2.3rem;
  height: 2.3rem;
  border-radius: 50%;
}

#logo {
  centerElement();
  z-index: -1;
}

#socialLinks {
  display: flex;
  absolute(2rem, 2rem, initial, initial);
  opacity: 0;
  transition: 1s opacity;
  transition-delay: .5s;

  img {
    display: block;
  }

  &.animate {
    opacity: 1;
  }
}

#socialLinks span:hover .tooltip, a:hover .tooltip {
  opacity: 1;
  right: 3.4rem;
  filter: blur(0);
}

#tweetButton {
  display: flex;
  position: relative;
  color: rgba(0,0,0,.9);
  margin: 0 2rem;
}

.tooltip {
  pointer-events: none;
  opacity: 0;
  position: absolute;
  right: 2.4rem;
  top: 0;
  overflow: visible;
  font-size: 1.2rem;
  text-align: center;
  width: 10rem;
  line-height: 2.4rem;
  background-color: black;
  color: white;
  border-radius: .4rem;
  padding: 0 1rem;
  filter: blur(.25rem);
  transition: .25s all ease-in-out;
  z-index: 1;
}

#particles-js {
  position: absolute;
  fullSize();
  filter: blur(3px);
  mix-blend-mode: multiply;
  transform: scale(1.25) skew(-25deg);
  pointer-events: none;
  z-index: -1;
}

#contextMenu {
  cursor: pointer;
  position: absolute;
  width: 20rem;
  height: 5rem;
  z-index: 2;
  background-color: red;
  border-radius: .4rem;
  visibility: hidden;
  opacity: 0;

  span {
    display: block;
    width: 100%;
    height: 100%;
    line-height: 5rem;
    text-align: center;
  }

  &.active {
    visibility: visible;
    opacity: 1;
  }
}

#welcomeText {
  centerElement();
  z-index: 1;
  width: 90%;
  text-align: center;
  transition: 2s all;

  &.hide {
    pointer-events: none;
    opacity: 0;
    filter: blur(1rem);
  }

  span {
    opacity: .25;
  }
}

.blur {
  filter: blur(.5rem);
  transition: 1s all;
}

#heroPage {
  position: absolute;
  fullSize();
  transition: .5s all;
}

#mysteryHeroButton, #menuButton {
  z-index: 2;
}

#image {
  absolute(0, 100%, initial, 0);
  fullSize();
  background-size: contain;
  background-color: #fff;
  background-position: right;
  background-repeat: no-repeat;
  z-index: -2;
  transition: 1s opacity;
  opacity: 0;

  &.animate {
    opacity: .5;
  }
}

#tint {
  absolute(0, initial, initial, 0);
  fullSize();
  z-index: -1;
  opacity: 0;
  transition: 1s all;

  &.animate {
    opacity: .25;
  }
}

#heroFortune {
  absolute(45%, initial, initial,  50%);
  transform: translate(-50%, -50%);
  width: 90%;
  color: rgba(0,0,0,.9);
  text-align: center;
  filter: blur(1rem);
  opacity: 0;
  transition: 1s all;

  &.animate {
    opacity: 1;
    top: 50%;
    filter: blur(0);
  }
}
#heroName {
  absolute(initial, 4rem, 4rem, initial);
  transform: translateY(100%);
  color: rgba(0,0,0,.9);
  filter: blur(1rem);
  opacity: 0;
  transition: 1s all;
  transition-delay: .1s;

  &.animate {
    opacity: 1;
    filter: blur(0);
    transform: translateY(0);
  }
}

#mysteryHeroButton, #listKey, #heroList {
  -webkit-backdrop-filter: blur(.4rem);
}

#mysteryHeroButton:hover, #menuButton:hover #listKey:not(.active) {
  border-color: rgba(0,0,0,.5);
}

#mysteryHeroButton {
  cursor: pointer;
  absolute(4rem, initial, initial, 50%);
  transform: translateX(-50%);
  width: 10rem;
  height: 10rem;
  line-height: 10rem;
  text-align: center;
  border-radius: 50%;
  border: 2px solid rgba(0,0,0,.25);
  color: #000;
  font-size: 2rem;
  transition: .25s all;
  box-sizing: border-box;
  &.animate {
    animation: 2s mysteryHoverGlow;
  }
}

@keyframes orbPulse {
  50% {
    box-shadow: 0 0 1rem #000;
  }
}

#mysteryKey {
  pointer-events: none;
  display: block;
  position: absolute;
  left: 50%;
  bottom: 0;
  height: 3rem;
  line-height: 3rem;
  text-align: center;
  width: 3rem;
  margin: 0;
  padding: 0;
  border-radius: 50%;
  box-sizing: border-box;
  transform: translate(-50%, 50%);
  background-color: #000;
  color: #fff;

  &.animate {
    animation: orbPulse 2s;
  }
}

#heroList {
  display: flex;
  margin: 0;
  padding: 0;
  width: 20rem;
  height: 100vh;
  font-size: 3.6rem;
  background-color: rgba(255,255,255,.95);
  box-sizing: border-box;
  box-shadow: 0 0 4rem rgba(0,0,0,.1);
  absolute(0, initial, initial, -20rem);
  list-style: none;
  flex-direction: column;
  overflow: auto;
  transition: .5s left;
  z-index: 1;

  &.open {
    left: 0;
  }

  li {
    cursor: pointer;
    font-size: 1.6rem;
    padding: 1rem;
    border-bottom: 1px solid rgba(0,0,0,.1);
    box-sizing: border-box;
    transition: .25s all;

    &:hover, &.active {
      padding-left: 2rem;
      background-color: #000;
      color: #fff;
    }
  }
}

#menuButton {
  cursor: pointer;
  display: flex;
  align-items: center;
  absolute(initial, initial, 4rem, 50%);
  transform: translateX(-50%);
}

#listKey {
  width: 4rem;
  height: 4rem;
  line-height: 4rem;
  text-align: center;
  margin: 0 1rem;
  border: 2px solid rgba(0,0,0,.25);
  border-radius: .4rem;
  transition: .5s all;
  pointer-events: none;

  &.active {
    border-color: #000;
  }
}

@media (max-width: 1440px) {
  h1 {
    font-size: 6.4rem;
  }

  h2, h3 {
    font-size: 3.6rem;
  }

  #mysteryHeroButton {
    top: 2rem;
  }

  #menuButton {
    bottom: 2rem;
  }

  #heroName {
    right: 2rem;
    bottom: 2rem;
  }
}

@media (max-width: 768px) {
  #image, #mysteryKey, #menuButton {
    display: none;
  }
}

#toggleSoundButton {
  position: relative;
  cursor: pointer;
  transform-origin: center;

  img {
    transform: rotateZ(45deg);
    transition: .25s transform;
  }

  &.animate {
    img {
      transform: rotateZ(-45deg);
    }
  }
}

body {
    background-color: #f5f5f5;
    margin: 0 auto;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
}

svg {
  position: absolute;
  left: 50%;
  top: 50%;
  display: block;
  transform: translate(-50%, -50%) rotate(-45deg) scale(1.25) !important;

  path {
    cursor: pointer;
    stroke: rgba(255,255,255,.25);

    &:hover {
      fill: rgba(19,134,191,.5);
    }
  }

  .item .sector {
    transition: all .1s linear;
    fill:#fff;
    stroke:#111;
  }
  .item:hover .sector, .item:focus .sector {
    fill:#eee;
  }
}

#favoriteWheel {
  position: absolute;
  display: flex;
  right: 0;
  fullSize();
  z-index: 3;
  opacity: 0;
  visibility: hidden;
  background-color: rgba(0,0,0,.5);
  transition: .5s all;

  &.active {
    visibility: visible;
    opacity: 1;
  }
