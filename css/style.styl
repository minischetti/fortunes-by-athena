// Variables

@font-face {
  font-family: 'Big Noodle';
  src: url('../fonts/big-noodle.woff') format('woff');
}
@font-face {
  font-family: 'Big Noodle Oblique';
  src: url('../fonts/big-noodle-oblique.woff') format('woff');
}

fullSize() {
  width: 100%;
  height: 100%;
}

absolute(top, right, bottom, left) {
  position: absolute;
  top: top;
  right: right;
  bottom: bottom;
  left: left;
}

centerElement() {
  absolute(50%, initial, initial, 50%);
  transform: translate(-50%, -50%);
}

html, body {
  fullSize();
  margin: 0;
  padding: 0;
}

html {
  font-size: 10px;
}

body {
  font-family: 'Big Noodle Oblique';
  font-size: 2.4rem;
  letter-spacing: .1rem;
  // background-color: #000;
  overflow: hidden;
}

h1 {
  font-size: 14.4rem;
}

h2, h3 {
  font-size: 7.2rem;
}

h1, h2, h3 {
  margin: 0;
}

#logo {
  centerElement();
  z-index: -1;
}

#homePage {
  position: absolute;
  fullSize();
  h1 {
    centerElement();
    span {
      opacity: .25;
    }
  }
}

#heroPage {
  position: absolute;
  fullSize();
  transition: 1s all;
  background-color: #fff;
  z-index: -1;

  // &.hidden {
  //   visibility: hidden;
  // }
}

#image {
  absolute(0, 100%, initial, 0);
  fullSize();
  background-size: contain;
  background-color: #fff;
  background-position: right;
  background-repeat: no-repeat;
  z-index: -2;
  // filter: grayscale(1);
  transition: 1s opacity;
  opacity: 0;

  &.animate {
    opacity: .5;
  }
}

#tint {
  absolute(0, initial, initial, 0);
  fullSize();
  z-index: -1;
  opacity: 0;
  transition: 1s all;

  &.animate {
    opacity: .25;
  }
}

#heroFortune {
  absolute(45%, initial, initial,  50%);
  transform: translate(-50%, -50%);
  width: 100%;
  color: rgba(0,0,0,.9);
  text-align: center;
  filter: blur(1rem);
  opacity: 0;
  transition: 1s all;

  &.animate {
    opacity: 1;
    top: 50%;
    filter: blur(0);
  }
}
#heroName {
  absolute(initial, 4rem, 4rem, initial);
  transform: translateY(50%);
  color: rgba(0,0,0,.9);
  filter: blur(1rem);
  opacity: 0;
  transition: 1s all;
  transition-delay: .1s;

  &.animate {
    opacity: 1;
    filter: blur(0);
    transform: translateY(0);
  }
}

#mysteryHeroButton {
  cursor: pointer;
  absolute(4rem, initial, initial, 50%);
  transform: translate(-50%, -2rem);
  width: 10rem;
  height: 10rem;
  line-height: 10rem;
  text-align: center;
  border-radius: 50%;
  border: 2px solid rgba(0,0,0,.25);
  color: #000;
  font-size: 2rem;
  transition: .25s all;
  box-sizing: border-box;

  &:hover {
    border-color: rgba(0,0,0,.5);
  }
}

@keyframes orbPulse {
  0% {
    box-shadow: 0 0 0rem #000;
  }
  50% {
    box-shadow: 0 0 1rem #000;
  }
  100% {
    box-shadow: 0 0 0rem #000;
  }
}

#mysteryKey {
  display: block;
  position: absolute;
  left: 50%;
  bottom: 0;
  height: 3rem;
  line-height: 3rem;
  text-align: center;
  width: 3rem;
  margin: 0;
  padding: 0;
  border-radius: 50%;
  box-sizing: border-box;
  transform: translate(-50%, 50%);
  background-color: #000;
  color: #fff;
  &.animate {
    animation: orbPulse 2s;
  }
}

#heroList {
  display: flex;
  margin: 0;
  padding: 0;
  width: 20rem;
  height: 100vh;
  font-size: 3.6rem;
  background-color: rgba(255,255,255,.95);
  box-sizing: border-box;
  box-shadow: 0 0 4rem rgba(0,0,0,.1);
  absolute(0, initial, initial, -20rem);
  list-style: none;
  flex-direction: column;
  overflow: auto;
  transition: .5s left;
  z-index: 1;

  &.open {
    left: 0;
  }

  li {
    cursor: pointer;
    font-size: 1.6rem;
    padding: 1rem;
    border-bottom: 1px solid rgba(0,0,0,.1);
    box-sizing: border-box;
    transition: .25s all;

    &:hover, &.active {
      padding-left: 2rem;
      background-color: #000;
      color: #fff;
    }
  }
}

.guideText {
  display: flex;
  align-items: center;
  absolute(initial, initial, 25%, 50%);
  transform: translate(-50%,-50%);
}

#listKey {
  width: 4rem;
  height: 4rem;
  line-height: 4rem;
  text-align: center;
  margin: 0 1rem;
  border: 2px solid rgba(0,0,0,.25);
  border-radius: .4rem;
  transition: .5s all;

  &.active {
    border-color: #000;
  }
}

@media (max-width: 1440px) {
  h2, h3 {
    font-size: 4.8rem;
  }
}

@media (max-width: 768px) {
  #image {
    background-position: center;
  }
}
